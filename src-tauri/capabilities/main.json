{
    "identifier": "main",
    "description": "Capability for the main window",
    "local": true,
    "windows": ["main"],
    "permissions": [
        "path:default",
        "event:default",
        "window:default",
        "fs:allow-create",
        "fs:allow-read-dir",
        "fs:allow-rename",
        "fs:allow-write",
        "fs:allow-write-file",
        "app:default",
        "dialog:allow-ask",
        "dialog:allow-confirm",
        "dialog:allow-message",
        "dialog:allow-open",
        "dialog:allow-save",
        "resources:default",
        "menu:default",
        "tray:default",
        "webview:allow-internal-toggle-devtools",
        "webview:default"
    ],
    "platforms": ["linux", "macOS", "windows", "android", "iOS"]
}
